
@model HirePros.ViewModels.AddProfessionalViewModel
    <body id="page-top">

        <header class="page-section">
            <h2 class="mt-0 text-dark text-primary">Professional Profile</h2>
            <div class="p-5">

                <form asp-controller="Professional" asp-action="Add" method="post">

                    <div class="form-group">
                        <label asp-for="Name"></label><br />
                        <input class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label><br />
                        <textarea class="form-control" asp-for="Description"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label><br />
                        <input type="email" class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Services"></label><br />
                        <select asp-for="ServicesID" asp-items="Model.Services"></select><br />
                    </div>


                    <input class="bg-secondary" type="submit" value="Add Professional" />

                </form>
            </div>
        </header>
    </body>
<!-- About Section -->
