
@model List<HirePros.Models.Professional>
<body id="page-top">

    <!-- Masthead -->
    <header class="page-section bg-secondary">

        <div class="container">
            <div class="align-items-center justify-content-center text-center">
                <h2 class="text-center mt-0 text-white-75">Hire Pros, Hire Local, Hire easily! </h2>
                <h6 class="text-white-50">Choose from an exhaustive list of professionals and interact with them using messagePro! </h6>
                <h6 class="text-white-50">Just Login, Choose pros and start interacting, Hire them only if you like the deal!</h6>
                <hr class="divider my-4">
                <h5 class="text-white-50">
                    @ViewBag.Title
                </h5>

                <div class="row">

                    @foreach (Professional prof in Model)
                    {
                        <div class="col-lg-3 col-md-6 text-center">
                            <div class="mt-5">

                                <ul style="list-style: none;">
                                    <li><i class="fas fa-4x fa-gem text-primary mb-4"></i></li>
                                    <li class="">@prof.Name</li>
                                    <li>@prof.Description</li>
                                    <li>@prof.Email</li>
                                    @if (ViewBag.Title == null)
                                    {
                                        <li><a asp-controller="Professional" asp-action="Service" asp-route-id="@prof.ID">@prof.Services.ServiceName</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }

                </div>
                <a class="btn btn-light btn-xl js-scroll-trigger" asp-controller="User" asp-action="Login">Add to MyPros!</a>
            </div>
        </div>
    </header>

</body>
