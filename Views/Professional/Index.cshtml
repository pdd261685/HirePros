
@model List<HirePros.Models.Professional>
    <body id="page-top">
        
        <!-- Masthead -->
        <header class="page-section bg-secondary">
            <div class="row h-25 align-items-center justify-content-center text-center">
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 font-weight-light mb-5">Hire Pros, Hire Local, Hire easily! Choose from an exhaustive list of professionals and interact with them using messagePro! Just Login, Choose pros and start interacting, Hire them only if you like the deal!  </p>
                    <a class="btn btn-light btn-xl js-scroll-trigger" asp-controller="User" asp-action="Login">Get Started!</a>
                </div>
            </div>
        </header>

        <section class="page-section bg-primary">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center">
                        <h2 class="text-white mt-0">Local Pros listing arround you!</h2>
                        <div >
                            <table class=" table text-white-75 font-weight-light mb-5">

                                <tr>
                                    <th>Company/Professional Name</th>
                                    <th>Description</th>
                                    <th>Email</th>
                                    <th>Services</th>
                                </tr>

                                @foreach (Professional prof in Model)
                                {
                                    <tr>
                                        <td>@prof.Name</td>
                                        <td>@prof.Description</td>
                                        <td>@prof.Email</td>
                                        <td><a asp-controller="Professional" asp-action="Service" asp-route-id="@prof.ServicesID">@prof.Services.ServiceName</a></td>


                                    </tr>
                                }
                            </table>
                        </div>


                        
                       
                        <a class="btn btn-light btn-xl js-scroll-trigger" asp-controller="User" asp-action="Login">Get Started!</a>
                    </div>
                </div>
            </div>
        </section>
    </body>





