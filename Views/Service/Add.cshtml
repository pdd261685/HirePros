
@model HirePros.ViewModels.AddServiceViewModel
    <body id="page-top">

        <header class="page-section">
            <h2 class="mt-0 text-dark text-primary">Add a new Service</h2>
            <div class="p-5">
                

                <form asp-controller="Service" asp-action="Add" method="post">
                    <div class="form-group">
                        <label asp-for="ServiceName"></label><br />
                        <input class="form-control" asp-for="ServiceName" />
                        <span asp-validation-for="ServiceName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ServiceDesc"></label><br />
                        <input class="form-control" asp-for="ServiceDesc" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Rate"></label><br />
                        <input class="form-control" asp-for="Rate" />

                    </div>

                    <input class="bg-primary" type="submit" value="Add Service" />
                </form>
            </div>
        </header>


    </body>
