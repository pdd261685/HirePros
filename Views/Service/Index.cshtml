
@model List<HirePros.Models.Services>

    <body id="page-top">
        <!-- Masthead -->
        <header class="masthead">
            <div class="container h-100">
                <div class="row h-100 align-items-center justify-content-center text-center">
                    <div class="col-lg-10 align-self-end">
                        <h3 class="text-white-75 font-weight-bold">Services Listed by your Local Pros </h3>

                        <ul class="navbar-nav ml-auto my-2 my-lg-0">
                            @foreach (Services serv in Model)
                            {
                                <li class="nav-item">
                                    <a class="nav-link js-scroll-trigger" asp-controller="Professional" asp-action="Service" asp-route-id="@serv.ID">@serv.ServiceName</a>
                                </li>
                            }
                        </ul>

                    </div>
                    <div class="col-lg-8 align-self-baseline">
                        <p class="text-white-75 font-weight-light mb-5">HirePro can help you find pros at your fingertip and connecting with them in real time using messagePro! Just select a service, select pros and start interacting, Hire them only when u like the deal!</p>
                        <a class="btn btn-primary btn-xl js-scroll-trigger" asp-controller="Professional" asp-action="Index">Find Pros</a>
                    </div>
                </div>
            </div>
        </header>

        <!-- About Section -->
        <section class="page-section bg-primary" id="about">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center">
                        <h2 class="text-white mt-0">We've got what you need!</h2>
                        <hr class="divider light my-4">
                        <p class="text-white-50 mb-4">HirePros listings hlep you search and choose from all the services and pros arround you and running in no time! Choose one or multiple of them, send them a requirement message and connect easily ! Hire them only if you like the deal!</p>
                        <a class="btn btn-light btn-xl js-scroll-trigger" asp-controller="User" asp-action="Login">Get Started!</a>
                    </div>
                </div>
            </div>
        </section>

    </body>





