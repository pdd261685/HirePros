
@model List<HirePros.Models.Services>

    <body id="page-top">
        <!-- Masthead -->
        

        <!-- Services Section -->
        <section class="page-section" id="services">
            <div class="container">
                <h2 class="text-center mt-0">At Your Service</h2>
                <hr class="divider my-4">
                <div class="container-fluid p-5" >
                    <div class="row no-gutters">
                        <div class="card d-flex flex-xl-row col-lg-10 col-sm-6 ; 
  margin: 5px;" style="overflow: auto;min-width: 100%; min-height: 280px; background-color:chocolate">

                        <div class="card d-inline-flex flex-xl-row col-lg-10 col-sm-6 ; 
  margin: 5px;" style="overflow: auto;min-width: 100%; min-height: 100px;">
                            @for (int i = 0; i < @Model.Count; i++)
                            {
                                <div class="card-content p-3 ">
                                    <img class="img-fluid w-75" src="../img/@(i + 1)/img.png" alt="" >
                                    <a class="nav-link js-scroll-trigger" asp-controller="Professional" asp-action="Service" asp-route-id="@Model[i].ID">@Model[i].ServiceName</a>
                                </div>
                            }


                        </div>
                            </div>
                          
                        
                    </div>

                        

                </div>

                

                        </div>

        </section>

            <!-- About Section -->
            <section class="page-section bg-primary" id="about">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8 text-center">
                            <h2 class="text-white mt-0">We've got what you need!</h2>
                            <hr class="divider light my-4">
                            <p class="text-white-50 mb-4">HirePros listings hlep you search and choose from all the services and pros arround you and running in no time! Choose one or multiple of them, send them a requirement message and connect easily ! Hire them only if you like the deal!</p>
                            <a class="btn btn-light btn-xl js-scroll-trigger" asp-controller="User" asp-action="Login">Get Started!</a>
                        </div>
                    </div>
                </div>
            </section>

        </body>





