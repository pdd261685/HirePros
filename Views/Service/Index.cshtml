
@model List<HirePros.Models.Services>

<body id="page-top">

    <!-- Masthead -->
    <header class="page-section bg-secondary">
        <h2 class="text-center mt-0 text-white-50">At Your Service</h2>
        <hr class="divider my-4">


        <!-- Services Section -->

        <div class="container-fluid p-0">
            <h4 class=" text-center text-white-50">What are you looking for? Choose a service to find professionals and we will get you connected!</h4>
            <div class="row no-gutters">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="col-lg-4 col-sm-6">
                        <a class="portfolio-box" asp-controller="Professional" asp-action="Service" asp-route-id="@Model[i].ID">
                            <img class="img-fluid" src="../img/Services/thumbnails/@(i+1).jpg" alt="">
                            <div class="portfolio-box-caption" style="position: absolute;top: 50%;left: 50%;">
                                <div class="project-category text-white-50">
                                    @Model[i].ServiceName
                                </div>
                                <div class="project-name">
                                    @Model[i].ServiceDesc
                                </div>
                            </div>
                        </a>
                    </div>
                }


            </div>

        </div>

    </header>


</body>
<!-- About Section -->
