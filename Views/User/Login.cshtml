@model HirePros.ViewModels.AddUserViewModel

@{
    ViewData["Title"] = "Login";
}
    <body>
        <h1>Login</h1>
        <h2 > @ViewBag.error</h2>
        @if(ViewBag.error=="Invalid Login")
        {
            <h4> Dont have an account?<a asp-controller="User" asp-action="Add" >Signup</a> here </h4>
        }
        <form asp-controller="User" asp-action="Login" method="post">

            <div class="form-group">
                <label asp-for="@Model.Username"></label><br />
                <input class="form-control" asp-for="@Model.Username" value="@Model.Username" />
                <span asp-validation-for="@Model.Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label><br />
                <input class="form-control" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password"></span>
            </div>

            <input type="submit" value="Login" />
        </form>
    </body>