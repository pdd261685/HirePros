
@model List<HirePros.Models.Professional>

<authoization>
    <allow users="@User.Identity.Name" />
</authoization>
<body id="page-top">

    <!-- Masthead -->
    <header class="page-section">

        <div class="container">
            <h2 class="mt-0 text-secondary">Welcome @User.Identity.Name , your shortlisted professionals:</h2>


            <table class="table-striped form-row text-xl-center" content="width=device-width">

                <tr class="justify-content-center" >
                    <th style="padding: 26px;" >Company/Professional Name</th>
                    <th >Description</th>
                    <th>Email</th>
                    <th>Services</th>
                    <th></th>
                </tr>
                @foreach (Professional userProf in Model)
                {
                    <tr>


                        <td style="padding: 20px; width:15em" >@userProf.Name</td>
                        <td style="width:30em">@userProf.Description     </td>
                        <td style="width:20em">@userProf.Email</td>
                        <td style="width:15em">@userProf.Services.ServiceName</td>
                        <td style="width:10em"><a asp-controller="User" asp-action="MessagePro" asp-route-name="@User.Identity.Name" asp-route-pro="@userProf.ID">MessagePro</a></td>
                        

                    </tr>
                }
            </table>
            
            @if (Model.Count == 0)
            {
                <p class="text-primary"><i>No professionals selected yet</i></p>
            }


            <div class="col-lg-8 align-self-baseline">
                <br />
                <a class="btn btn-primary btn-xl js-scroll-trigger" asp-controller="User" asp-action="AddUserPros" asp-route-name="@User.Identity.Name">Add More Pros</a>
            </div>
            <br />
            <p><a asp-controller="Service" asp-action="Index">Find Services</a></p>
            <br />

            </div>
        </header>
    </body>





